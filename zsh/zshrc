export DOTFILES_PATH="$HOME/.dotfiles"
export ZSH_CONFIG_PATH="$DOTFILES_PATH/zsh/zsh_custom"

source "${DOTFILES_PATH}/zsh/private.env"
source "${ZSH_CONFIG_PATH}/env.zsh"
source "${ZSH_CONFIG_PATH}/plugins.zsh"
source "${ZSH_CONFIG_PATH}/aliases.zsh"
source "${ZSH_CONFIG_PATH}/vi_mode_custom.zsh"
source "${ZSH_CONFIG_PATH}/functions.zsh"
source "${ZSH_CONFIG_PATH}/theme.zsh"
source "${ZSH_CONFIG_PATH}/hooks.zsh"
source "${ZSH_CONFIG_PATH}/keybindings.zsh"

# init fzf compatible with zsh-vi-mode
source <(fzf --zsh)
zvm_after_init_commands+=('source <(fzf --zsh)')

# prompt
eval "$(starship init zsh)"
